- content_for(:page, 'groups')
- content_for(:title, 'Groepen')

%section#content
  = render 'layouts/partials/search'

  .page.page-form{ :data => { 'authenticity_token' => form_authenticity_token} }
    .row
      .col-md-6{ :class => ('hidden-xs' unless @group.nil?) }
        = render 'admin/groups/partials/index', group: @group, groups: @groups

      .col-md-6
        = render 'admin/groups/partials/edit', group: @group

        = render 'admin/groups/partials/view', group: @group
