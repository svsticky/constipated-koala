.row
  = form_for(resource, as: resource_name, url: password_path(resource_name), :html => { :class => 'form-horizontal', :method => 'patch'}) do |f|

    - if !resource.errors.full_messages.blank?
      - resource.errors.full_messages.each do |message|
        .alert.alert-danger
          %span
            = message

    - if flash[:alert]
      .alert.alert-danger
        %span
          = flash[:alert]

    - if flash[:notice]
      .alert.alert-info
        %span
          = flash[:notice]

    = f.hidden_field :reset_password_token

    %fieldset
      %h4= I18n.t 'devise.passwords.edit.instruction'

      .form-group
        .input-group
          .input-group-prepend
            %span.input-group-text
              %i.fa.fa-lock
          = f.password_field :password, autocomplete: 'off', placeholder: t('devise.placeholders.password'), :class => 'form-control'

      .form-group
        .input-group
          .input-group-prepend
            %span.input-group-text
              %i.fa.fa-lock
          = f.password_field :password_confirmation, autocomplete: 'off', placeholder: t('devise.placeholders.repeat_password'), :class => 'form-control'

      .form-group
        = f.submit I18n.t('devise.passwords.edit.change_password'), :class => 'btn btn-primary btn-block'

.row
  .text-center.mx-auto.dark:text-white
    = link_to (I18n.t 'devise.registrations.password_recovery'), new_user_password_path
    |
    = link_to (I18n.t 'devise.registrations.sign_up'), new_registration_path
