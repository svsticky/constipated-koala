%h1.text-center.text-2xl.mb-2.dark:text-white
  = t('devise.registrations.sign_up')

.row
  = form_for :user, url: new_registration_path, method: :post, :html => { :class => 'w-full'} do |f|

    - if @user.errors.any?
      - @user.errors.full_messages.each do |message|
        .alert.alert-danger
          %span
            = message

    - if flash[:alert]
      .alert.alert-danger
        %span
          = flash[:alert]

    - if flash[:notice]
      .alert.alert-info
        %span
          = flash[:notice]

    %fieldset.w-full
      .form-group
        .input-group
          .input-group-prepend
            %span.input-group-text
              %i.fa.fa-envelope
          = f.email_field :email, autofocus: true, placeholder: t('devise.placeholders.email'), :class => 'form-control'

      .form-group
        .input-group
          .input-group-prepend
            %span.input-group-text
              %i.fa.fa-lock
          = f.password_field :password, autocomplete: 'off', placeholder: t('devise.placeholders.password'), :class => 'form-control'

      .form-group
        .input-group
          .input-group-prepend
            %span.input-group-text
              %i.fa.fa-lock
          = f.password_field :password_confirmation, autocomplete: 'off', placeholder: t('devise.placeholders.repeat_password'), :class => 'form-control'
      .form-group
        = f.submit I18n.t('devise.registrations.new.submit'), :class => 'btn btn-primary btn-block'

.row
  .text-center.mx-auto.dark:text-white
    = link_to (I18n.t 'devise.registrations.password_recovery'), new_user_password_path
    |
    = link_to (I18n.t 'devise.registrations.login'), new_user_session_path
