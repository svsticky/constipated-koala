.row
  = form_for(resource, as: resource_name, url: confirmation_path(resource_name), :html => { :class => 'form-horizontal', :method => 'post'}) do |f|

    - if !resource.errors.full_messages.blank?
      - resource.errors.full_messages.each do |message|
        .alert.alert-danger
          %span
            = message

    - if flash[:alert]
      .alert.alert-danger
        %span
          = flash[:alert]

    - if flash[:notice]
      .alert.alert-info
        %span
          = flash[:notice]

    %fieldset
      %h4= I18n.t 'devise.confirmations.new.instruction'

      .form-group
        .input-group-prepend
          %span.input-group-text
            %i.fa.fa-envelope
          = f.email_field :email, autofocus: true, placeholder: t('devise.placeholders.email'), :class => 'form-control'

      .form-group
        = f.submit I18n.t 'devise.confirmations.new.submit', :class => 'btn btn-primary btn-block'

.row
  .text-center.mx-auto.dark:text-white
    = link_to (I18n.t 'devise.registrations.login'), new_user_session_path
    |
    = link_to (I18n.t 'devise.registrations.sign_up'), new_registration_path
