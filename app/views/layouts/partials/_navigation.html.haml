%aside#sidebar-container{role: 'navigation'}
  #sidebar-wrapper
    .list-group.list-group-flush{'data-collapse-nav' => '', 'data-slim-scroll' => '', 'data-highlight-active' => '' }
      = link_to :root, :class => 'list-group-item list-group-item-action' do
        %span= I18n.t("navigation.home")
        %i.fa.fa-desktop{:class => ('active' if current_page?(:root))}

      = link_to :members, :class => 'list-group-item list-group-item-action' do
        %span= I18n.t("admin.navigation.member")
        %i.fa.fa-user{:class => ('active' if controller_name == 'members')}

      = link_to :groups, :class => 'list-group-item list-group-item-action' do
        %span= I18n.t("admin.navigation.group")
        %i.fa.fa-users{:class => ('active' if controller_name == 'groups')}

      = link_to :activities, :class => 'list-group-item list-group-item-action'do
        %span= I18n.t("navigation.activity")
        %i.fa.fa-ticket-alt{:class => ('active' if controller_name == 'activities')}

      = link_to :posts, :class => 'list-group-item list-group-item-action' do
        %span= I18n.t("admin.navigation.messages")
        %i.fa.fa-file-alt{:class => ('active' if controller_name == 'posts')}

      = link_to :payments, :class => 'list-group-item list-group-item-action' do
        %span= I18n.t("admin.navigation.payments")
        %i.far.fa-money-bill-alt{:class => ('active' if current_page?(:payments))}

      = link_to :transactions, :class => 'list-group-item list-group-item-action' do
        %span= I18n.t("admin.navigation.transactions")
        %i.fa.fa-history{:class => ('active' if current_page?(:transactions))}

      = link_to :settings, :class => 'list-group-item list-group-item-action' do
        %span= I18n.t("admin.navigation.settings")
        %i.fas.fa-cog{:class => ('active' if current_page?(settings_path))}

      = link_to :logs, :class => 'list-group-item list-group-item-action' do
        %span= I18n.t("admin.navigation.impressions")
        %i.fas.fa-list-alt{:class => ('active' if current_page?(logs_path))}

    .d-md-none
      = link_to destroy_user_session_path, 'data-method' => :delete do
        %span= I18n.t("devise.sessions.new.sign_out")
        %i.fa.fa-sign-out-alt
          %span.icon-bg.bg-danger
