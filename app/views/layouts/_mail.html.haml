.panel.panel-default
  .panel-body
    %form.form-horizontal#mail{ :data => { 'id' => id }, :action => mail_activity_participants_path( :activity_id => id ), :method => :post }
      .form-group
        %label.col-md-2.hidden-xs{ :style => 'height: 34px; line-height: 34px;'} Geadresseerden
        .col-md-10.col-xs-12
          .row#recipients
            .col-md-8
              %input#bbc.form-control{:name => 'recipients', :type => 'text', :value => recipients.map{ |recipient| "#{recipient.member.name} <#{recipient.email}>"}.join(', '), :readonly => true }
            .col-md-4
              .ui-select
                %select.form-control{ :name => 'recipients', :style => 'width: 100%;'}
                  %option{ :value => 'all' } ALLE DEELNEMERS
                  %option{ :value => 'debtors', :selected => 'selected' } NOG BETALERS
      .form-group
        %label.col-md-2.hidden-xs{ :style => 'height: 34px; line-height: 34px;'} Onderwerp
        .col-md-10.col-xs-12
          %input#onderwerp.form-control{ :name => 'subject', :type => 'text', :value => "Sticky #{subject}" }

      = render 'layouts/editor'

      #textarea.form-control{ :contenteditable => 'true' }
        - if mail.present?
          = render :template => "mailings/#{mail}", :locals => { subject: subject }

        :preserve
          #{current_user.credentials.signature}

      %textarea#html.form-control
        - if mail.present?
          = render :template => "mailings/#{mail}", :locals => { subject: subject }

        :preserve
          #{ current_user.credentials.signature }

      .mail-actions
        %button.btn.btn-primary{ type: 'submit' } Verstuur
        .btn.btn-default.disabled{ :disabled => 'disabled' } Draft
